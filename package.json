{
  "name": "pomodoro",
  "version": "1.0.0",
  "main": "public/scripts/index.html",
  "scripts": {
    "watch:sass": "node-sass public/sass/main.sass public/css/style.css -w",
    "compile:sass": "node-sass public/sass/main.sass public/css/style.comp.css",
    "concat:css": "concat -o public/css/style.concat.css public/css/**/*.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' public/css/style.concat.css -o public/css/style.prefix.css",
    "compress:css": "node-sass public/css/style.prefix.css public/css/style.css --output-style compressed",
    "build:css": "npm-run-all compile:sass concat:css prefix:css compress:css",
    "devserver": "live-server public --browser=\"C:/Program Files/Firefox Developer Edition/firefox.exe\"",
    "start": "npm-run-all --parallel devserver watch:sass",
    "start parcel": "parcel public/index.htm",
    "build": "parcel build public/index.htm --dist-dir ./dist"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.13",
    "concat": "^1.0.3",
    "node-sass": "^7.0.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^10.0.0",
    "parcel": "^2.8.0"
  },
  "author": "",
  "license": "ISC",
  "description": ""
}
